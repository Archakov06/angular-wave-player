html(ng-app="app")
  head
    title Audio Player
    link(href="public/css/app.min.css",rel="stylesheet")

body(ng-controller="appController")
  .audio-block
    .audio-block__thumb
      .audio-block__inner-thumb(style="background-image: url('{{thumb}}')")

    .audio-block__info

      .row
        h2(ng-bind="artist")
        span(ng-bind="song")

      .row
        button(ng-click="play()")
          <svg height="32px" ng-show="!isPlaying" style="enable-background:new 0 0 512 512;position: relative;left: 3px;" version="1.1" viewBox="0 0 512 512" width="32px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path fill="#fff" d="M405.2,232.9L126.8,67.2c-3.4-2-6.9-3.2-10.9-3.2c-10.9,0-19.8,9-19.8,20H96v344h0.1c0,11,8.9,20,19.8,20  c4.1,0,7.5-1.4,11.2-3.4l278.1-165.5c6.6-5.5,10.8-13.8,10.8-23.1C416,246.7,411.8,238.5,405.2,232.9z"/></svg>
          <svg height="32px" ng-show="isPlaying" style="enable-background:new 0 0 512 512;" version="1.1" viewBox="0 0 512 512" width="32px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path fill="#fff" d="M224,435.8V76.1c0-6.7-5.4-12.1-12.2-12.1h-71.6c-6.8,0-12.2,5.4-12.2,12.1v359.7c0,6.7,5.4,12.2,12.2,12.2h71.6   C218.6,448,224,442.6,224,435.8z"/><path fill="#fff" d="M371.8,64h-71.6c-6.7,0-12.2,5.4-12.2,12.1v359.7c0,6.7,5.4,12.2,12.2,12.2h71.6c6.7,0,12.2-5.4,12.2-12.2V76.1   C384,69.4,378.6,64,371.8,64z"/></svg>

      .row
        .audio-block__wave
          div#track-wave
            canvas

  script(src="public/js/libs.js")
  script(src="public/js/app.min.js")
