@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,700&subset=cyrillic');
@import "layouts/_reset.styl"

body
  font-family 'Open Sans'
  font-weight 300
  font-size 14px
  color #0b0c0e

.audio-block
  margin 0 auto
  position absolute
  left 50%
  top 50%
  transform translate(-50%,-50%)
  width 610px
  height 280px
  box-shadow: 0px 15px 50px 0px rgba(0,0,0,0.20);

  &__thumb
    display inline-block
    float left
    width 45%

  &__inner-thumb
    width 100%
    height 100%
    background-position center
    background-size cover
    background-repeat no-repeat

  &__info
    display inline-block
    float left
    width 55%

    h2
      display block
      font-size 22px
      height 28px
      font-weight bold
      width 70%
      margin 30px auto 10px
      text-align center
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

    span
      display block
      color #757575
      font-size 16px
      height 19px
      width 70%
      margin 0 auto
      text-align center
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

    button
      display block
      background-color #0b0c0e
      border 0
      padding 25px
      border-radius 50%
      cursor pointer
      box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.30);
      transition all 0.2s
      margin 20px auto 0

      &:hover
        background-color lighten(#0b0c0e,10%)

      &:active
        box-shadow: 0px 3px 10px 0px rgba(0,0,0,0.10);
        transform translateY(1px)

    #track-wave
      display block
      margin 0 auto
      width 85%

      canvas
        width 100%
        height 84px
        margin-left 15px
